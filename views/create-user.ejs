    <body onload="navCheck()" class="d-flex text-center text-white bg-dark">
        <div class="container d-flex w-100 h-100 p-3 mx-auto flex-column">
            
            <%- include('common/header'); -%>
            
            <main class="pt-5 px-3 justify-content-center">
                <h1 class="text-center">Join</h1>
                <div class="row justify-content-md-center">
                  <div class="col-4">
                    <form method="POST" action="/join">
                      <div class="form-group input-outline-white my-3">
                        <span class="form-group-text w-25 text-white">Name:</span>
                        <input type="text" class="form-control bg-dark text-white " id="name" name="name"/>
                        </div>
                        <div>
                        <% if (errors['name']) { %>
                        <p style="color: red"><%= errors['name'].message %></p>
                        <% } %>
                      </div>

                      <div class="form-group input-outline-white my-3">
                        <span class="form-group-text w-25 text-white">Email:</span>
                        <input type="email" class="form-control bg-dark text-white " id="email" name="email"/>
                      </div>
                      <div>
                        <% if (errors['email']) { %>
                        <p style="color: red"><%= errors['email'].message %></p>
                        <% } %>
                      </div>
                      <div class="form-group input-outline-white my-3">
                        <span class="form-group-text w-25 text-white">Password:</span>
                        <input type="password" class="form-control bg-dark text-white " id="password" name="password"/>
                      </div>
                      <div>
                        <% if (errors['password']) { %>
                        <p style="color: red"><%= errors['password'].message %></p>
                        <% } %>
                      </div>
        
                      <button type="submit" class="btn btn-outline-light my-3">Submit</button>
                    </form>

                  </div>
                </div>
        
            </main>
            <%- include('common/footer'); -%>
    </body>
</html>